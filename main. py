# File Read & Write + Error Handling Challenge

def modify_content(content):
    """
    Modify the file content.
    Example: convert text to uppercase.
    You can change this function to do any transformation you like.
    """
    return content.upper()

def main():
    # Ask the user for the filename
    filename = input("Enter the filename to read: ")

    try:
        # Try opening and reading the file
        with open(filename, "r", encoding="utf-8") as file:
            original_content = file.read()
        
        # Modify the content
        modified_content = modify_content(original_content)
        
        # Create a new filename for output
        new_filename = "modified_" + filename
        
        # Write modified content to the new file
        with open(new_filename, "w", encoding="utf-8") as new_file:
            new_file.write(modified_content)
        
        print(f"✅ Modified file saved as '{new_filename}'.")

    except FileNotFoundError:
        print("❌ Error: The file does not exist.")
    except PermissionError:
        print("❌ Error: You don't have permission to read this file.")
    except Exception as e:
        print(f"❌ An unexpected error occurred: {e}")

if __name__ == "__main__":
    main()
